
.map{width: 100%; height: 260px;}
.uni-list-cell-left {padding: 0 30rpx;}
.text-desc{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;justify-content: space-between;padding:10rpx 20rpx}
.colorRed{color: red;}
.colorGreen{color: #32CD32;}
.colorYellow{color: yellow;}
.colorBlue{color: #007aff;}
.bgBlue{background-color: #007aff;}
.bgGreen{background-color: #32CD32;}
.bgAsh{background-color: #C8C7CC;}
.uni-timeline{padding: 30rpx 20rpx;}
.uni-timeline-item-content-t{font-weight: bold;}
.desc-pad{padding: 0 0rpx}
.desc-pad .bz{color: rgb(0, 122, 255);}
.desc-pad .bz .icon{color:rgb(0, 122, 255)}
.uni-timeline-last-item .uni-timeline-item-divider{background: #bbb;}
.CBlue{background-color: #007aff;box-shadow: 0 5px 5px #007aff;}
.CGreen{background-color: #32CD32;box-shadow: 0 5px 5px #32CD32;}
.CAsh{background-color: #C8C7CC;box-shadow: 0 5px 5px #C8C7CC;}
.module{overflow: hidden; margin: 20rpx auto; width: 220rpx;height: 220rpx;border-radius: 50%;color: #fff;text-align: center;}
.module .text{font-size: 20px;margin: 50rpx auto 10rpx;}
.uni-timeline-item .uni-timeline-item-content{width: 100%;padding-right: 20rpx;}
.content-show{width:100%}
.sign-title{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;justify-content: space-between; padding: 30rpx 24rpx;border-bottom: 1rpx solid #333;}
.sign-title .portrait{width: 100rpx;height: 100rpx;line-height: 100rpx;border-radius: 50%;background-color: #007AFF;color: #fff;font-size: 28rpx;text-align: center;}
.sign-title .sign-title-l{display: -webkit-box;display: -webkit-flex;display: flex;}
.sign-title .sign-title-l .text{margin-left: 20rpx;}
.sign-title .sign-title-l .text .name{font-size: 32rpx;}
.sign-title .sign-title-l .text  .gz{color: darkblue;display: -webkit-inline-box;display: -webkit-inline-flex;display: inline-flex;}
.sign-title .sign-title-l .text .gz text{display: inline-block;}
.sign-title .sign-title-l .text .gz .t1{
		overflow: hidden; /*超出部分隐藏*/
    text-overflow:ellipsis;/* 超出部分显示省略号 */
    white-space: nowrap;/*规定段落中的文本不进行换行 */
    width: 166rpx;/*需要配合宽度来使用*/}
.iswq{padding: 0px 12px;color: #99CC33;border: 1px solid #99CC33;width: 26px;height: 24px;border-radius: 4px;margin-left: 20rpx;display: inline-block;}
.desc-pad .last{margin-bottom:80rpx;}
.relocation{color: #0000FF;}
.uni-popup .content .text{color:#666666;}
	

